<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape
            android:shape="oval"
            android:useLevel="false">
            <solid
                android:color="@color/yellow_f9a825"/>
            <stroke
                android:width="1dp"
                android:color="@color/yellow_f9a825"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape
            android:shape="oval"
            android:useLevel="false">
            <solid
                android:color="@color/red_cf0004"/>
            <stroke
                android:width="2dp"
                android:color="@color/yellow_f9a825"/>
        </shape>
    </item>
</selector>
